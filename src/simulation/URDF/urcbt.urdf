<?xml version="1.0"?>
<robot name="URCBOT" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:property name="M_PI" value="3.1415926535897931" />
  <!--collision tags defines the body after collision-->
  <!--visual tags displays the thing....-->
  <!--inertia tags defines the physics of the body(link)-->
  <!--material tags defines the color or texture.... -->
  <!--link and joint names are self explainatory about their position-->

  <material name="Blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="Grey2">
    <color rgba="0.9 0.9 0.9 1.0"/>
  </material>

  <material name="Black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <material name="LightGrey">
    <color rgba="0.6 0.6 0.6 1.0"/>
  </material>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="5"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <box size="6.5 3.3 0.4"/>
      </geometry>
      <material name="Blue" ></material>
    </visual>

    <collision>
      <geometry>
        <box size="6.5 3.3 0.4"/>
      </geometry>
    </collision>

  </link>

  <link name="kinect_link">
     <visual>
       <geometry>
         <box size="1.0 .5 0.2" />
       </geometry>
       <material name="Blue" />
     </visual>
     <inertial>
         <mass value="0.0001" />
         <origin xyz="0 0 0" />
         <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                  iyy="0.0001" iyz="0.0"
                  izz="0.0001" />
     </inertial>
 </link>

  <link name="kinect_depth_frame">
    <inertial>
        <mass value="0.0001" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                 iyy="0.0001" iyz="0.0"
                 izz="0.0001" />
    </inertial>
  </link>

  <link name="kinect_depth_optical_frame">
     <inertial>
         <mass value="0.0001" />
         <origin xyz="0 0 0" />
         <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                  iyy="0.0001" iyz="0.0"
                  izz="0.0001" />
     </inertial>
  </link>

  <link name="front_right_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <link name="middle_right_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <link name="back_right_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <link name="front_left_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <link name="middle_left_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <link name="back_left_leg">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/><!--need to check if it is the mass of COM or distri..-->
      <mass value="1"/>
      <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
    </inertial>

    <visual>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
      <material name="Grey2" ></material>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.50" radius="0.6"/>
      </geometry>
      <origin rpy="1.57075 0 0" xyz="0.0 0.0 0.0"/>
    </collision>
  </link>

  <!--joints are like constraints used to assemble parts-->

  <joint name="kinect_joint" type="fixed">
    <axis xyz="0 1 0" />
    <origin xyz="3.2 0.0 0.32"/>
    <parent link="base_link"/>
    <child link="kinect_link"/>
  </joint>

  <joint name="depth_optical_joint" type="fixed">
     <origin xyz="0 0 0" rpy="1.57075 0 1.57075" />
     <parent link="kinect_depth_frame" />
     <child link="kinect_depth_optical_frame" />
  </joint>

  <joint name="kinect_depth_joint" type="fixed">
     <origin xyz="0 0.028 0" rpy="0 0 0" />
     <parent link="kinect_link" />
     <child link="kinect_depth_frame" />
  </joint>

  <joint name="base_to_front_right_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="front_right_leg"/>
    <origin xyz="2.5 2.0 0.0"/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <joint name="base_to_back_right_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="back_right_leg"/>
    <origin xyz="-2.5 2.0 0.0  "/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <joint name="base_to_middle_right_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="middle_right_leg"/>
    <origin xyz="0 2.0 0.0 "/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <joint name="base_to_front_left_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="front_left_leg"/>
    <origin xyz="2.5 -2.0 0.0"/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <joint name="base_to_back_left_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="back_left_leg"/>
    <origin xyz="-2.5 -2.0 0.0  "/>
    <calibration rising="0.0"/>
    <dynamics damping="0.0" friction="0.0"/>
    <limit effort="30" velocity="1.0" lower="-2.2" upper="0.7" />
    <safety_controller k_velocity="10" k_position="15" soft_lower_limit="-2.0" soft_upper_limit="0.5" />
  </joint>

  <joint name="base_to_middle_left_leg" type="continuous">
    <axis xyz="0 1 0"/>
    <parent link="base_link"/>
    <child link="middle_left_leg"/>
    <origin xyz="0 -2.0 0.0  "/>
  </joint>

  <gazebo>
    <plugin name="diffdrive_plugin_multiwheel" filename="libdiffdrive_plugin_multi_wheel.so">
        <alwaysOn>true</alwaysOn>
        <updateRate>25.0</updateRate>
        <rightJoints>base_to_front_left_leg base_to_middle_left_leg base_to_back_left_leg</rightJoints>
        <leftJoints>base_to_front_right_leg base_to_middle_right_leg base_to_back_right_leg</leftJoints>
        <wheelSeparation>2.5</wheelSeparation>
        <wheelDiameter>1.2</wheelDiameter>
        <torque>50000</torque>
        <robotBaseFrame>base_link</robotBaseFrame>
        <commandTopic>/cmd_vel</commandTopic>
        <odometryTopic>odom</odometryTopic>
        <odometryFrame>odom</odometryFrame>
        <publishOdometryTf>0</publishOdometryTf>
        <publishOdometryMsg>1</publishOdometryMsg>
    </plugin>
  </gazebo>

  <gazebo reference="kinect_link">
    <sensor type="depth" name="camera1">
        <always_on>1</always_on>
        <visualize>true</visualize>
        <camera>
            <horizontal_fov>1.047</horizontal_fov>
            <image>
                <width>640</width>
                <height>480</height>
                <format>R8G8B8</format>
            </image>
            <depth_camera>

            </depth_camera>
            <clip>
                <near>0.1</near>
                <far>100</far>
            </clip>
        </camera>
        <plugin name="kinect_link_controller" filename="libgazebo_ros_openni_kinect.so">
            <alwaysOn>true</alwaysOn>
            <updateRate>10.0</updateRate>
            <cameraName>camera1</cameraName>
            <frameName>kinect_link</frameName>
            <imageTopicName>rgb/image_raw</imageTopicName>
            <depthImageTopicName>depth/image_raw</depthImageTopicName>
            <pointCloudTopicName>depth/points</pointCloudTopicName>
            <cameraInfoTopicName>rgb/camera_info</cameraInfoTopicName>
            <depthImageCameraInfoTopicName>depth/camera_info</depthImageCameraInfoTopicName>
            <pointCloudCutoff>0.4</pointCloudCutoff>
            <hackBaseline>0.07</hackBaseline>
            <distortionK1>0.0</distortionK1>
            <distortionK2>0.0</distortionK2>
            <distortionK3>0.0</distortionK3>
            <distortionT1>0.0</distortionT1>
            <distortionT2>0.0</distortionT2>
            <CxPrime>0.0</CxPrime>
            <Cx>0.0</Cx>
            <Cy>0.0</Cy>
            <focalLength>0.0</focalLength>
        </plugin>
    </sensor>
  </gazebo>

</robot>
